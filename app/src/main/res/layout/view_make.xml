<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
    android:id="@+id/rl_address_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg">
    <TextView
        android:id="@+id/tv_make_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="冲泡中..."
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColor="@color/login_black"
        android:textSize="18sp"
        />

 <!--   <teabar.ph.com.teabar.view.DoubleWaveView
        android:id="@+id/doubleW"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true" />-->
    <TextView
        android:id="@+id/tv_dialog_bj"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#DCF5F1"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        />
    <teabar.ph.com.teabar.view.WaveProgress
        android:id="@+id/waterView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:darkWaveAnimTime="1000"
        app:darkWaveColor="@color/card1"
        app:lightWaveAnimTime="2000"
        app:lightWaveColor="@color/card2"
        app:lightWaveDirect="R2L"
        app:lockWave="false"
        app:valueSize="35sp"
        app:waveHeight="30dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        app:waveNum="1" />
        <TextView
            android:id="@+id/tv_full"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@drawable/make_cpbj"
            android:visibility="invisible"
            />
    <ImageView
        android:id="@+id/bt_dialog_bj"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/card"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        />

        <ImageView
            android:id="@+id/iv_dialog_move"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignStart="@+id/tv_dialog_bj"
            android:layout_centerVertical="true"
            android:src="@mipmap/dialog_countdown" />
        <TextView
            android:id="@+id/tv_brew_zb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:text="@string/equ_xq_jbz"
            android:textColor="@color/nomal_green"
            />
    <RelativeLayout
        android:id="@+id/rl_brew_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textColor="@color/nomal_green"
            android:textSize="50sp"
            />
        <TextView
            android:id="@+id/tv_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S"
            android:layout_toRightOf="@+id/tv_number"
            android:layout_alignBottom="@+id/tv_number"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"

            />

    </RelativeLayout>

    <Button
        android:id="@+id/bt_view_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/equ_xq_stopjp"
        android:textColor="@color/white"
        android:paddingBottom="10dp"

        android:layout_centerHorizontal="true"
        android:layout_below="@+id/waterView"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="20dp"
        android:textSize="16sp"
        android:background="@mipmap/make_brew"

        />
    <LinearLayout
        android:id="@+id/li_make_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/waterView"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        >
        <Button
            android:id="@+id/bt_view_sc"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="@string/question_qued"
            android:textColor="@color/login_black"
            android:textSize="16sp"
            android:background="@drawable/answer_button1"
            />
        <Button
            android:id="@+id/bt_view_fx"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="@string/equ_xq_fx"
            android:textColor="@color/login_black"
            android:textSize="16sp"
            android:background="@drawable/answer_button1"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    </RelativeLayout>

</RelativeLayout>

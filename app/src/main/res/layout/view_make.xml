<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <TextView
        android:id="@+id/tv_make_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="冲泡中..."
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColor="@color/login_black"
        android:textSize="18sp"
        />

 <!--   <teabar.ph.com.teabar.view.DoubleWaveView
        android:id="@+id/doubleW"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true" />-->
    <TextView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#DCF5F1"
        android:layout_centerInParent="true"
        />
    <teabar.ph.com.teabar.view.WaveProgress
        android:id="@+id/waterView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:darkWaveAnimTime="1000"
        app:darkWaveColor="@color/card1"
        app:lightWaveAnimTime="2000"
        app:lightWaveColor="@color/card2"
        app:lightWaveDirect="R2L"
        app:lockWave="false"
        app:valueSize="35sp"
        app:waveHeight="30dp"
        android:layout_centerInParent="true"
        app:waveNum="1" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/card"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textColor="@color/white"
            android:textSize="50sp"
            />
        <TextView
            android:id="@+id/tv_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S"
            android:layout_toRightOf="@+id/tv_number"
            android:layout_alignBottom="@+id/tv_number"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"

            />

    </RelativeLayout>

    <Button
        android:id="@+id/bt_view_stop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="停止冲泡"
        android:textColor="@color/login_black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/waterView"
        android:layout_marginTop="130dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="20dp"
        android:textSize="16sp"
        android:background="@drawable/answer_button1"

        />
    <LinearLayout
        android:id="@+id/li_make_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/waterView"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        >
        <Button
            android:id="@+id/bt_view_sc"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="收藏"
            android:textColor="@color/login_black"
            android:textSize="16sp"
            android:background="@drawable/answer_button1"
            />
        <Button
            android:id="@+id/bt_view_fx"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="分享"
            android:textColor="@color/login_black"
            android:textSize="16sp"
            android:background="@drawable/answer_button1"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>

</RelativeLayout>

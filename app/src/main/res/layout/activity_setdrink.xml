<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_main_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/iv_power_fh"
        android:layout_below="@+id/tv_main_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:src="@mipmap/login_back"
        />
    <TextView
        android:id="@+id/tv_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drink_set"
        android:layout_below="@+id/iv_power_fh"
        android:layout_marginLeft="17dp"
        android:textSize="30sp"
        android:textColor="@color/login_black"
        />
    <RelativeLayout
        android:id="@+id/rl_drin_remind"
        android:layout_below="@+id/tv_power"
        android:layout_width="match_parent"

        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_drink_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drink_reminder"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="26dp"
            android:textSize="16sp"
            android:textColor="@color/login_black"
            />
        <ImageView
            android:id="@+id/iv_drink_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/equ_open"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_drink_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FD4D75"
        android:text="8ï¼š00"
        android:textSize="28sp"
        android:layout_below="@+id/rl_drin_remind"
        android:layout_marginLeft="16sp"
        />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/social_gray"
        android:layout_below="@id/tv_drink_time"
        android:layout_marginTop="20dp"
        android:layout_marginRight="23dp"
        android:layout_marginLeft="18dp"

        />
    <TextView
        android:id="@+id/tv_drin_drinking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drink_num"
        android:layout_below="@id/view1"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        android:textSize="18sp"
        android:textColor="@color/login_black"
        />
    <TextView
        android:id="@+id/tv_drink_num1"
        android:layout_alignTop="@+id/tv_drin_drinking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_below="@+id/tv_power"
        android:layout_marginRight="15dp"
        android:textSize="28sp"
        android:textColor="#686868"
        android:layout_toLeftOf="@+id/tv_drink_cup"
        />
    <TextView
        android:id="@+id/tv_drink_cup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_alignBottom="@+id/tv_drink_num1"
        android:text="@string/drink_unit"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:textColor="#686868"
        />
    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/seekbar2"
        android:layout_below="@+id/tv_drin_drinking"
        android:layout_marginTop="-10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="17dp"
        app:rsb_progress_height="10dp"
        app:rsb_max="6"
        app:rsb_mode="single"
        app:rsb_tick_mark_mode="other"
        app:rsb_tick_mark_number="6"
        app:rsb_tick_mark_text_margin="-50dp"
        app:rsb_tick_mark_text_color="#BBBBBB"
        app:rsb_tick_mark_text_size="14sp"
        app:rsb_tick_mark_text_array="@array/markArray1"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:rsb_progress_color="#fe4d76"
        app:rsb_progress_default_color="@color/rsbColorSeekBarDefault"
        app:rsb_thumb_drawable="@mipmap/wash_y"
        app:rsb_thumb_size="40dp"
        app:rsb_thumb_inactivated_drawable="@null"
        app:rsb_indicator_height="20dp"
        app:rsb_indicator_width="110dp"
        app:rsb_indicator_show_mode="alwaysHide"
        app:rsb_indicator_radius="18dp"


        />
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/social_gray"
        android:layout_below="@id/seekbar2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="23dp"
        android:layout_marginLeft="18dp"
        />
    <TextView
        android:id="@+id/tv_drink_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/login_black"
        android:textSize="18sp"
        android:text="@string/drink_cup1"
        android:layout_below="@id/view2"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        />
    <LinearLayout
        android:layout_below="@+id/tv_drink_size"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="120dp">
        <RelativeLayout
            android:id="@+id/rl_drink_smal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="70dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_drink_scup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drink_cup2"
                android:textSize="14sp"
                android:textColor="@color/login_black"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                />
            <ImageView
                android:id="@+id/iv_drink_scup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/cup_s1"
                android:layout_below="@+id/tv_drink_scup"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/tv_drink_size1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drink_size1"

                android:textSize="14sp"
                android:textColor="@color/login_black"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_drink_big"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_drink_bcup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drink_cup3"
                android:textSize="14sp"
                android:textColor="@color/login_black"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                />
            <ImageView
                android:id="@+id/iv_drink_bcup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/cup_b2"
                android:layout_below="@+id/tv_drink_bcup"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/tv_drink_size2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drink_size2"

                android:textSize="14sp"
                android:textColor="@color/login_black"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/login_button"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:text="@string/drink_save"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_question_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/logo"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="18dp"
        />
    <TextView
        android:layout_below="@+id/iv_question_logo"
        android:id="@+id/tv_question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_base3"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textColor="@color/login_black"
        android:lineSpacingExtra="5dp"
        />

    <Button
        android:id="@+id/bt_question1_esure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_qued"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_question1"
        android:layout_marginRight="20dp"
        android:background="@mipmap/wj_button"
        android:paddingBottom="5dp"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_question_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/logo"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="18dp"
        />
    <TextView
        android:layout_below="@+id/iv_question_logo"
        android:id="@+id/tv_question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="太棒了！他是这样工作的，你告诉我越多，我越聪明"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="18dp"
        android:textColor="@color/login_black"
        />
    <TextView
        android:id="@+id/tv_question2"
        android:layout_below="@+id/tv_question1"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="能更好的帮助你。首先让我们从基础开始"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="好的"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_question2"
        android:layout_marginRight="20dp"
        android:background="@drawable/brew_button"
        android:textColor="@color/nomal_green"
        android:layout_marginTop="50dp"
        />

</RelativeLayout>

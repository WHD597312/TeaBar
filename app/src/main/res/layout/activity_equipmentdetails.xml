<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa"
        android:layout_alignBottom="@+id/tv_sbxq"
        android:layout_marginBottom="-15dp"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c9c9c9"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_equ_fh"
        android:layout_below="@+id/tv_main_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:src="@mipmap/login_back"
        />
    <TextView
        android:id="@+id/tv_sbxq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/equ_xq_title"
        android:layout_below="@+id/iv_equ_fh"
        android:layout_marginLeft="17dp"
        android:textSize="30sp"
        android:textColor="@color/login_black"
        />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_equmentxq"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sbxq"
            android:overScrollMode="never"
            />
    <LinearLayout
        android:id="@+id/li_equ_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/rv_equmentxq"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        >
        <ImageView
            android:id="@+id/iv_equxq_xz"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:scaleType="centerInside"
            android:src="@mipmap/set_xz2"
            />
        <TextView
            android:layout_toRightOf="@+id/iv_equxq_xz"
            android:layout_alignTop="@+id/iv_equxq_xz"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:scaleType="centerInside"
            android:gravity="center"
            android:text="@string/equ_xq_mr"
            android:textColor="#333333"
            android:layout_marginLeft="12dp"
            android:textSize="18sp"
            />
    </LinearLayout>



</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#f7f7f7"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_main_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/iv_power_fh"
        android:layout_below="@+id/tv_main_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:src="@mipmap/login_back"
        />
    <TextView
        android:id="@+id/tv_add_save"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="保存"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/nomal_green"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_main_1"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/tv_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drink_makemethod"
        android:layout_below="@+id/iv_power_fh"
        android:layout_marginLeft="17dp"
        android:textSize="30sp"
        android:textColor="@color/login_black"
        />
    <TextView
        android:id="@+id/tv_method_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改"
        android:layout_alignBottom="@+id/tv_power"
        android:layout_toRightOf="@+id/tv_power"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        />

    <teabar.ph.com.teabar.view.MyView
        android:id="@+id/arcprogressBar"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_below="@+id/tv_power"
        android:background="@null"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
      />
    <LinearLayout
        android:layout_alignTop="@+id/arcprogressBar"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_add_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90"
            android:textSize="25sp"
            android:textColor="#333333"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="℃"
            android:textSize="14sp"

        />

    </LinearLayout>
    <teabar.ph.com.teabar.view.MyView1
        android:id="@+id/arcprogressBar1"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_below="@+id/arcprogressBar"
        android:background="@null"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-70dp"
        />
    <LinearLayout
        android:layout_alignTop="@+id/arcprogressBar1"
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_add_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textSize="25sp"
            android:textColor="#333333"
            android:paddingRight="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="s"
            android:textSize="14sp"

            />

    </LinearLayout>
   <!--<teabar.ph.com.teabar.view.VerticalProgressBar1-->
       <!--android:id="@+id/verticalProgressBar1"-->
       <!--android:layout_width="100dp"-->
       <!--android:layout_height="180dp"-->
       <!--android:layout_centerHorizontal="true"-->
       <!--android:paddingTop="90dp"-->
       <!--android:layout_below="@+id/arcprogressBar"-->
       <!--android:layout_marginTop="-140dp"-->
       <!--/>-->



    <teabar.ph.com.teabar.view.MySeekBar
        android:id="@+id/beautySeekBar4"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_below="@+id/arcprogressBar"
        android:layout_alignLeft="@+id/arcprogressBar"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-100dp"
        android:rotation="270"
        android:max="350"
        android:min="100"
        android:progress="0"
        android:progressDrawable="@drawable/bg_seekbar_progress_drawable"
        android:thumb="@null"
        app:textBackground="@mipmap/add_make"
        app:textColor="#666666"
        app:textOrientation="top"
        app:textSize="15sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="34dp"
        >
        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="回到默认"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:background="@drawable/answer_button2"
            android:textColor="@color/login_black"
            android:layout_gravity="center"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="27dp"
            android:textSize="16sp"
            />
        <Button
            android:id="@+id/btn_make"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="冲泡"
            android:paddingBottom="10dp"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:background="@mipmap/login_button"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>

</RelativeLayout>

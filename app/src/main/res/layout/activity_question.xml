<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_main_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/iv_power_fh"
        android:layout_below="@+id/tv_main_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:src="@mipmap/login_back"
        />
    <TextView
        android:id="@+id/tv_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_title"
        android:layout_below="@+id/iv_power_fh"
        android:layout_marginLeft="17dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@color/login_black"
        />
    <TextView
        android:id="@+id/tv_ques_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_style"
        android:layout_below="@+id/tv_power"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textColor="@color/login_black"
        android:textSize="28sp"
        />
    <TextView
        android:id="@+id/tv_ques_xq"
        android:layout_below="@+id/tv_ques_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的皮肤看起来是怎样的？"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#999999"
        />
    <teabar.ph.com.teabar.view.FlowTagView
        android:id="@+id/fv_answer"
        android:layout_below="@+id/tv_ques_xq"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </teabar.ph.com.teabar.view.FlowTagView>
    <Button
        android:id="@+id/bt_question_finish"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="完成"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="76dp"
        android:layout_marginRight="76dp"
        android:background="@drawable/login_button"
        />

</RelativeLayout>

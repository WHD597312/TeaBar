<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <TextView
        android:id="@+id/tv_main_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <RelativeLayout
        android:id="@+id/rl_login_title"
        android:layout_below="@+id/tv_main_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
    <TextView
        android:id="@+id/tv_login_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_tv_login"
        android:textSize="28sp"
        android:textColor="@color/login_black"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        />
        <TextView
            android:id="@+id/tv_login_regist"
            android:layout_toRightOf="@+id/tv_login_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_tv_regist"
            android:textSize="17sp"
            android:textColor="@color/login_gray"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_login_welcom"
        android:layout_below="@+id/rl_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_tv_welcom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:textColor="@color/login_black"
        android:textSize="18sp"
        />


    <EditText
        android:id="@+id/et_login_user"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_login_welcom"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="27dp"
        android:layout_marginRight="26dp"
        android:background="@drawable/login_edtext"
        android:hint="@string/login_et_user"
        android:paddingLeft="15dp"
        android:textColor="#888888"
        android:textSize="14sp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@mipmap/loign_user"
        android:layout_alignTop="@+id/et_login_user"
        android:layout_alignRight="@+id/et_login_user"
        android:layout_marginRight="15dp"
        />

    <EditText
        android:id="@+id/et_login_pasw"
        android:layout_below="@+id/et_login_user"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_edtext"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#888888"
        android:hint="@string/login_et_pass"
        android:textSize="14sp"
        android:paddingLeft="15dp"
        />
    <ImageView
        android:id="@+id/login_iv_seepassw"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@mipmap/loign_see"
        android:layout_alignTop="@+id/et_login_pasw"
        android:layout_alignRight="@+id/et_login_pasw"
        android:layout_marginRight="15dp"
        />
    <TextView
        android:id="@+id/tv_login_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_tv_forget"
        android:layout_below="@+id/et_login_pasw"
        android:layout_alignParentRight="true"
        android:layout_marginRight="27dp"
        android:layout_marginTop="18dp"
        android:textSize="16sp"
        android:textColor="#999999"
        />
    <Button
        android:id="@+id/bt_login_ensure"
        android:layout_below="@+id/tv_login_forget"
        android:layout_marginTop="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginLeft="26dp"
        android:background="@drawable/login_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="@string/login_tv_login"
        />
    <TextView
        android:id="@+id/tv_bj1"
        android:layout_below="@+id/bt_login_ensure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />
  <!--  <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginLeft="26dp"
        android:layout_below="@+id/bt_login_ensure"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="30dp" />-->
    <Button
        android:id="@+id/login_button"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/login_face"
        android:text="FaceBook"
        android:textColor="@color/white"
        android:layout_marginLeft="26dp"
        android:layout_below="@+id/bt_login_ensure"
        android:layout_marginTop="40dp"
       />

    <Button
        android:id="@+id/sign_in_button"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/bt_login_ensure"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="26dp"
        android:background="@drawable/login_google"
        android:text="Google"
        android:textColor="@color/white"
        android:textSize="14sp" />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_esure"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_tv_clause1"
            android:textSize="12sp"
            android:textColor="#bbbbbb"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_tv_clause2"
            android:textSize="12sp"
            android:textColor="#FE4D76"
            />

    </LinearLayout>

</RelativeLayout>

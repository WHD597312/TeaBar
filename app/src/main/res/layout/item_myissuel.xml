<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="7dp"

    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rl_social_title"
        android:layout_alignBottom="@+id/rl_social_talkmess"
        android:scaleType="fitXY"
        android:layout_marginBottom="-25dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@mipmap/mu"
        />
    <RelativeLayout
        android:id="@+id/rl_social_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_social_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:text="3-11   11:20"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="28dp"

            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_social_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_social_title"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="29dp"
        android:text="这套促进睡眠套餐的茶，确实不错啊！这两天睡的很安静。"
        android:textColor="@color/social_gray"
        android:textSize="13sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_pic"
        android:layout_below="@+id/tv_social_text"
        android:layout_alignLeft="@+id/tv_social_text"
        android:layout_alignRight="@+id/tv_social_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/rl_social_talk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_pic"
        android:layout_alignLeft="@+id/rv_pic"
        android:layout_marginTop="15dp"
        >


    <ImageView
        android:id="@+id/iv_social_talk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/social_talk"
        android:layout_centerVertical="true"

        />
        <TextView
            android:id="@+id/tv_issue_talknum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_social_talk"
            android:layout_marginLeft="13dp"
            />
    <ImageView
        android:id="@+id/iv_social_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/social_no"
         android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_social_talk"
        android:layout_marginLeft="83dp"

        />
    <TextView
        android:id="@+id/tv_social_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="23"
        android:layout_toRightOf="@+id/iv_social_no"
        android:layout_marginLeft="13dp"
        android:textSize="14sp"
        android:textColor="@color/social_gray"
        />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_social_talkmess"
        android:layout_below="@+id/rl_social_talk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_issue_bj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/isue_talk"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:scaleType="fitXY"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_issue_talk"
            android:layout_alignLeft="@id/iv_issue_bj"
            android:layout_alignRight="@+id/iv_issue_bj"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/rl_social_talkmess"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>

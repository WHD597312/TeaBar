<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/tv_main_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/iv_forget_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/login_back"
        android:scaleType="centerInside"
        android:layout_below="@+id/tv_main_1"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/tv_forget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_tv_forget"
        android:textSize="30sp"
        android:textColor="@color/login_black"
        android:layout_below="@+id/iv_forget_back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="26dp"
        />


    <EditText
        android:id="@+id/et_regist_user"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_forget_title"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="26dp"
        android:background="@drawable/login_edtext"
        android:hint="@string/login_et_user"
        android:paddingLeft="15dp"
        android:textColor="#888888"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerInside"
        android:src="@mipmap/loign_user"
        android:layout_alignTop="@+id/et_regist_user"
        android:layout_alignRight="@+id/et_regist_user"
        android:layout_marginRight="5dp"
        />

    <EditText
        android:id="@+id/et_regist_code"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/et_regist_user"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="26dp"
        android:layout_toLeftOf="@+id/bt_register_code"
        android:background="@drawable/login_edtext"
        android:hint="@string/login_et_code"
        android:paddingLeft="15dp"
        android:textColor="#888888"
        android:textSize="14sp" />

    <Button
        android:id="@+id/bt_register_code"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="#f1fbf7"
        android:textColor="#28db9f"
        android:text="@string/login_bt_getcode"
        android:layout_alignTop="@+id/et_regist_code"
        android:layout_alignRight="@+id/et_regist_pasw"
        />

    <EditText
        android:id="@+id/et_regist_pasw"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/et_regist_code"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="26dp"
        android:background="@drawable/login_edtext"
        android:hint="@string/login_et_pass"
        android:paddingLeft="15dp"
        android:textColor="#888888"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerInside"
        android:src="@mipmap/login_pass"
        android:layout_alignTop="@+id/et_regist_pasw"
        android:layout_alignRight="@+id/et_regist_pasw"
        android:layout_marginRight="5dp"
        />
    <EditText
        android:id="@+id/et_regist_pasw2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/et_regist_pasw"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="26dp"
        android:background="@drawable/login_edtext"
        android:hint="@string/login_et_pass1"
        android:paddingLeft="15dp"
        android:textColor="#888888"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerInside"
        android:src="@mipmap/login_pass"
        android:layout_alignTop="@+id/et_regist_pasw2"
        android:layout_alignRight="@+id/et_regist_pasw2"
        android:layout_marginRight="5dp"
        />
    <Button
        android:id="@+id/bt_regist_ensure"
        android:layout_below="@+id/et_regist_pasw2"
        android:layout_marginTop="70dp"
        android:layout_marginRight="26dp"
        android:layout_marginLeft="26dp"
        android:background="@mipmap/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="@string/dialog_add_qx5"
        />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp"
    android:orientation="vertical">
   <LinearLayout
       android:id="@+id/li_all_title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >
      <ImageView
          android:id="@+id/iv_all_head"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:src="@mipmap/my_pic"
          android:scaleType="centerInside"
          android:layout_marginLeft="5dp"

          />
      <TextView
          android:id="@+id/tv_all_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="你好"
          android:textSize="16sp"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="10dp"
          android:textColor="#666666"
          />
   </LinearLayout>

   <TextView
       android:id="@+id/tv_all_mess"
       android:layout_below="@+id/li_all_title"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="70dp"
       android:layout_marginRight="20dp"
       />

   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="#f5f5f5"
       android:layout_below="@+id/tv_all_mess"
       android:layout_marginTop="20dp"
       android:layout_alignLeft="@+id/tv_all_mess"
       android:layout_alignRight="@+id/tv_all_mess"
       />

</RelativeLayout>
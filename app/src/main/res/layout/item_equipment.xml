<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="67dp">
<ImageView
    android:id="@+id/iv_equ"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/equ_online"
    android:layout_centerVertical="true"
    android:layout_marginLeft="14dp"
    />
    <TextView
        android:id="@+id/tv_equ_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lify-å®¶"
        android:textColor="#333333"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/iv_equ"
        android:layout_marginLeft="20dp"
        />
    <ImageView
        android:id="@+id/iv_equ_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/equ_open"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f5f5f5"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/tv_equ_name"
        android:layout_alignRight="@+id/iv_equ_open"
        />

</RelativeLayout>

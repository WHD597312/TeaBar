<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_social_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp">
        <TextView
            android:id="@+id/tv_login_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/social_circle_title"
            android:textSize="30sp"
            android:textColor="@color/login_black"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_login_regist"
            android:layout_toRightOf="@+id/tv_login_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/social_circle_message"
            android:textSize="20sp"
            android:textColor="#bbbbbb"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_hasmess"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignRight="@+id/tv_login_regist"
            android:background="@drawable/login_button"
            android:layout_alignTop="@+id/tv_login_regist"
            android:visibility="invisible"
            />
        <RelativeLayout
            android:id="@+id/rl_social_inform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_social_friend"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:id="@+id/iv_social_inform"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/social_inform1"
                android:scaleType="centerInside"
                />
            <TextView
                android:id="@+id/tv_social_mes"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignRight="@+id/iv_social_inform"
                android:background="@drawable/login_button"
                android:layout_marginRight="14dp"
                android:layout_marginTop="9dp"
                android:visibility="invisible"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_social_friend"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/social_friend"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/iv_main_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/equ_add1"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:visibility="visible"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/li_social"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

</LinearLayout>

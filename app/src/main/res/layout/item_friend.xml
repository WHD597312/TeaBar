<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="75dp">
    <ImageView
        android:id="@+id/iv_talk_pic"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/my_pic"
        />
    <TextView
        android:id="@+id/tv_talk_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mr.liu"
        android:layout_toRightOf="@+id/iv_talk_pic"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textColor="#333"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/tv_talk_num"
        android:layout_width="20dp"
        android:layout_height="12dp"
        android:text="99+"
        android:layout_alignBottom="@id/tv_talk_name"
        android:textSize="8sp"
        android:gravity="center"
        android:layout_toRightOf="@+id/tv_talk_name"
        android:layout_marginLeft="10dp"
        android:background="@drawable/login_button"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/tv_talk_time"
        android:layout_alignTop="@+id/tv_talk_name"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#777777"
        android:text="3-11 11:20"
        android:layout_marginRight="15dp"
        android:layout_marginTop="3dp"
        />
    <TextView
        android:id="@+id/tv_message"
        android:layout_below="@+id/tv_talk_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="有没有新茶上市？"
        android:layout_alignLeft="@+id/tv_talk_name"

        android:layout_marginRight="15dp"
        android:textSize="14sp"
        android:singleLine="true"
        android:textColor="@color/social_gray"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#f5f5f5"
        android:layout_alignLeft="@+id/tv_talk_name"
        android:layout_alignRight="@+id/tv_talk_time"
        />
</RelativeLayout>
</LinearLayout>
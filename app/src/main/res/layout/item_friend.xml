<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <ImageView
        android:id="@+id/iv_talk_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/my_pic"
        />
    <TextView
        android:id="@+id/tv_talk_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mr.liu"
        android:layout_toRightOf="@+id/iv_talk_pic"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/tv_talk_num"
        android:layout_width="20dp"
        android:layout_height="12dp"
        android:text="99+"
        android:layout_alignBottom="@id/tv_talk_name"
        android:textSize="8sp"
        android:gravity="center"
        android:layout_toRightOf="@+id/tv_talk_name"
        android:layout_marginLeft="10dp"
        android:background="@drawable/login_button"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/tv_talk_time"
        android:layout_alignTop="@+id/tv_talk_name"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFD5D5D5"
        android:text="3-11 11:20"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/tv_message"
        android:layout_below="@+id/tv_talk_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="有没有新茶上市？"
        android:layout_alignLeft="@+id/tv_talk_name"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textColor="@color/social_gray"
        />

</RelativeLayout>
</LinearLayout>
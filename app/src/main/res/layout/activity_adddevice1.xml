<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
    android:id="@+id/tv_main_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />

    <TextView
        android:id="@+id/tv_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/equ_add_wifi1"
        android:layout_below="@+id/tv_main_1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:textSize="30sp"
        android:textColor="@color/login_black"
        />
    <Button
        android:id="@+id/bt_add_main"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_main_1"
        android:layout_marginTop="25dp"
        android:background="@drawable/answer_button2"
        android:text="@string/tea_kouwei_tg"
        android:layout_marginRight="18dp"

        />

    <EditText
        android:id="@+id/et_add_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_power"
        android:background="@color/white"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="wifi名称"
        android:paddingLeft="20dp"
        android:textSize="14sp"
        android:textColorHint="#777777"
        />

    <EditText
        android:id="@+id/et_add_pass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/et_add_name"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="@string/equ_add_wifipass"
        android:paddingLeft="20dp"
        android:textSize="14sp"
        android:textColorHint="#777777"
        />
    <LinearLayout
        android:id="@+id/li_device_ask"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/et_add_pass"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/device_ask"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/tv_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="配对教程"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginLeft="10dp"
        />
    </LinearLayout>

    <Button
        android:id="@+id/bt_device_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/login_button"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:text="@string/equ_add_add"
        android:textColor="@color/white"
        android:paddingBottom="11dp"
        android:textSize="16sp"
        />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@mipmap/main_weather"
        >
    <RelativeLayout
        android:id="@+id/rl_weather_xq"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >


    <TextView
            android:id="@+id/tv_mail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuesday"
            android:textColor="@color/white"
            android:layout_below="@+id/iv_mail_pic"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/tv_weather_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/weather_tq"
            android:layout_toRightOf="@+id/tv_mail_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            />
        <TextView
            android:id="@+id/tv_weather_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hang Kong"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/tv_weather_pic"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"

            />
        <TextView
            android:id="@+id/tv_weather_tq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="overcast to cloudy"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/tv_weather_pic"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/tv_weather_place"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/tv_weather_pic"
            android:layout_marginLeft="15dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/weather_sd"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tv_weather_sd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24%"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginLeft="7dp"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/weather_zl"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tv_weather_zl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginLeft="7dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_weather_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="℃"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_alignBottom="@+id/tv_weather_temp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:paddingBottom="5dp"
            />
    </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_weather_xq"
            android:text="Recommended for you"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_weather_xq"
            android:text="Balance"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:text="Black bean round meat tea"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"

            />
        <Button
            android:id="@+id/bt_make"
            android:layout_width="96dp"
            android:layout_height="36dp"
            android:background="@drawable/weather_button"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:text="@string/equ_xq_cp"
            />
    </RelativeLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_main_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/iv_power_fh"
        android:layout_below="@+id/tv_main_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:src="@mipmap/login_back"
        />
    <TextView
        android:id="@+id/tv_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_power_title"
        android:layout_below="@+id/iv_power_fh"
        android:layout_marginLeft="17dp"
        android:textSize="30sp"
        android:textColor="@color/login_black"
        />
    <LinearLayout
        android:id="@+id/li_power_time"
        android:layout_below="@+id/tv_power"
        android:layout_alignParentRight="true"
        android:layout_marginTop="32dp"
        android:layout_marginRight="19dp"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_power_day"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/my_power_day"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@drawable/power_button_left"
            />
        <TextView
            android:id="@+id/tv_power_week"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/my_power_week"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="#93FF638D"
            />
        <TextView
            android:id="@+id/tv_power_month"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/my_power_month"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@drawable/power_button_right1"
            />
    </LinearLayout>
    <com.github.zlpolygonview.ZLPolygonView
        android:id="@+id/polygonview"
        android:layout_width="217dp"
        android:layout_height="217dp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/li_power_time"
        android:layout_centerHorizontal="true"
        app:InnerColor="@color/pink2"
        app:TextSize="12sp"
        />

</RelativeLayout>

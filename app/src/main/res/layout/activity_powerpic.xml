<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_main_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_power_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80åˆ†"
        android:textSize="36sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_main_1"
        android:layout_marginTop="30sp"
        android:textColor="@color/nomal_green"
        />
    <TextView
        android:id="@+id/tv_power_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_power_title"
        android:layout_below="@+id/tv_power_score"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:textColor="#333333"
        />


    <TextView
        android:id="@+id/tv_pic_titl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_power_s1"
        android:layout_alignTop="@+id/rcv_power"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:textColor="#333333"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_power_s3"
        android:layout_alignBottom="@+id/rcv_power"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:textColor="#333333"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:layout_toLeftOf="@+id/rcv_power"
        android:layout_marginRight="-20dp"
        android:text="@string/my_power_s4"
        android:layout_alignBottom="@+id/rcv_power"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:text="@string/my_power_s3"
        android:layout_toRightOf="@+id/rcv_power"
        android:layout_marginLeft="-20dp"
        android:layout_alignBottom="@+id/rcv_power"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:textColor="#333333"
        />
    <teabar.ph.com.teabar.view.RadarChart02View
        android:id="@+id/rcv_power"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@+id/tv_power_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />
    <Button
        android:id="@+id/bt_power_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/login_button"
        android:text="@string/question_button"
        android:textColor="@color/white"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    >
    <TextView
        android:id="@+id/tv_dia_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/equ_xq_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:textColor="#030303"
        />
    <EditText
        android:id="@+id/et_dia_name"
        android:layout_below="@+id/tv_dia_title"
        android:layout_marginTop="25dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:background="@drawable/login_edtext"
        android:layout_height="40dp"
        android:textColor="#C7C7CD"
        android:hint="lify-å®¶"
        android:paddingLeft="15dp"
        android:textSize="14sp"
        />
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/et_dia_name"
        android:layout_marginTop="20dp"
        android:background="#f5f5f5"
        />
    <LinearLayout
        android:layout_below="@id/view1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_dia_qx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/equ_dia_del"
            android:textColor="#B7B7B7"
            android:textSize="17sp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#f5f5f5"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_dia_qd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/equ_dia_esure"
            android:textSize="17sp"
            android:textColor="@color/nomal_green"
            android:gravity="center"
            />

    </LinearLayout>


</RelativeLayout>

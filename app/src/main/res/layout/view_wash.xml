<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
    android:id="@+id/rl_address_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg">
    <TextView
        android:id="@+id/tv_make_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="冲泡中..."
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColor="@color/login_black"
        android:textSize="18sp"
        />
        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/iv_dialog_move"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/tv_make_title"
            android:src="@mipmap/dialog_countdown" />
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_make_title"
        >



        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:layout_centerInParent="true"
            android:textColor="@color/nomal_green"
            android:textSize="50sp"
            />
        <TextView
            android:id="@+id/tv_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S"
            android:layout_toRightOf="@+id/tv_number"
            android:layout_alignBottom="@+id/tv_number"
            android:textColor="@color/nomal_green"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"

            />

    </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>

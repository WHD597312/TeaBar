<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_question_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/logo"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="18dp"
        />

    <TextView
        android:id="@+id/tv_question_sex"
        android:layout_below="@+id/iv_question_logo"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你的性别"
        />
    <LinearLayout
        android:id="@+id/li_question_man"
        android:layout_below="@+id/tv_question_sex"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_question_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/choose_nan"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_set_man"
            android:layout_marginLeft="12dp"
            android:textSize="16sp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/li_question_women"
        android:layout_alignTop="@id/li_question_man"
       android:layout_toRightOf="@+id/li_question_man"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_question_women"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/set_xz2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_set_women"
            android:layout_marginLeft="12dp"
            android:textSize="16sp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_question_birthday"
        android:layout_below="@+id/li_question_man"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="出生日期"
        />
    <TextView
        android:id="@+id/et_question_birthday"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_question_birthday"
        android:gravity="center_vertical"
        android:background="#f5f5f5"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        />
    <TextView
        android:id="@+id/tv_question_place"
        android:layout_below="@+id/et_question_birthday"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="居住地区"
        />
    <TextView
        android:id="@+id/et_question_place"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_question_place"
        android:background="#f5f5f5"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        />
    <Button
        android:id="@+id/bt_question1_esure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="好的"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/et_question_place"
        android:layout_marginRight="20dp"
        android:background="@drawable/brew_button"
        android:textColor="@color/nomal_green"
        android:layout_marginTop="70dp"
        />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/method_itembj" />
        

        <TextView
            android:id="@+id/tv_plan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="冲泡方法1"
            android:textColor="@color/login_black"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            />
            <ImageView
                android:id="@+id/iv_method_del"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/close"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"

                />
        <LinearLayout
            android:layout_below="@+id/tv_plan_name"
            android:layout_alignLeft="@+id/tv_plan_name"
            android:layout_marginTop="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/make_time"

                />
            <TextView
                android:id="@+id/tv_method_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30s"
                android:textColor="@color/social_gray"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:src="@mipmap/make_wd"
                />
            <TextView
                android:id="@+id/tv_method_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80℃"
                android:textColor="@color/social_gray"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/make_tea"
                android:layout_marginLeft="36dp"
                />
            <TextView
                android:id="@+id/tv_method_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300ml"
                android:textColor="@color/social_gray"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                />


        </LinearLayout>



    </RelativeLayout>


</LinearLayout>

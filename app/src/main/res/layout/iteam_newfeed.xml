<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    >
    <RelativeLayout
        android:id="@+id/rl_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_new_pic"
        android:layout_centerVertical="true"
        >


    <TextView
        android:id="@+id/tv_new_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:maxLines="2"
        android:textColor="#333333"
        android:text="Power Power Power "
        />
    <TextView
        android:id="@+id/tv_new_mes"
        android:layout_below="@+id/tv_new_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:maxLines="2"
        android:textColor="#777777"
        android:text="Power Power Power "
        android:ellipsize="end"
        />

    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_new_pic"
        android:layout_width="131dp"
        android:layout_height="95dp"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f1f1f1"
        android:layout_alignRight="@+id/iv_new_pic"
        android:layout_alignLeft="@+id/rl_power"
        android:layout_below="@+id/iv_new_pic"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>
